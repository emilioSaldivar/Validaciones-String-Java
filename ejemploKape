palabras repedas
    int contadorAuciliar = diccionario.get(palabrasSeparadas[i]);//obtenemos el objeto y lo convertimos en entero
                diccionario.replace(palabrasSeparadas[i], ++contadorAuciliar);//aumentamos contador

            } else {//si esta vacio directo entra en esta condicion 
                diccionario.put(palabrasSeparadas[i], 1);//agregamos la palabra y aumentamos el contador cambiamos el valor del contador de palabras a 1
            }

        }

        //System.out.println(diccionario);
        //creamos 6 variables que contendran 3 caddenas y 3 enteros correspondientes a las palabras 
        //mas repetidas y sus repeticiones respectivamente
        String palabra1 = "", palabra2 = "", palabra3 = "", persistePalabra = "";
        int repeticion1 = 0, repeticion2 = 0, repeticion3 = 0, comparaRepeticiones = 0;
        
        //calculo de las 3 palabras mas repetidas
        for (String palabra : diccionario.keySet()) {
            System.out.println(palabra + " = " + diccionario.get(palabra));
            if (!palabra.equalsIgnoreCase("")) {//obviamos los espacios que tambien son almacenados a la hora de matchear los acracteres especiales solitarios
                if ((diccionario.get(palabra) > repeticion1) && (diccionario.get(palabra) > repeticion2) && (diccionario.get(palabra) > repeticion3)) {

                    persistePalabra = palabra3;//almacena la palabra actual entre la lista de palabras mas repetidas
                    comparaRepeticiones = repeticion3;//para una posterior comparacion en caso de reemplazo

                    palabra3 = palabra;
                    repeticion3 = diccionario.get(palabra);

                    if (comparaRepeticiones > repeticion2 && comparaRepeticiones > repeticion1) {//comparamos si la palabra que es sustituida 
                        palabra2 = persistePalabra;                                           //es repetida mas veces que las 2 palabras restantes
                        repeticion2 = comparaRepeticiones;
                    } else if (comparaRepeticiones < repeticion2 && comparaRepeticiones > repeticion1) {//si no es mas repetida que la anterior comparamos
                        // con la siguiente palabra
                        palabra1 = persistePalabra;
                        repeticion1 = comparaRepeticiones;
                    }
                } else if ((diccionario.get(palabra) > repeticion1) && (diccionario.get(palabra) > repeticion2) && (diccionario.get(palabra) <= repeticion3)) {

                    persistePalabra = palabra2;//almacena la palabra actual entre la lista de palabras mas repetidas
                    comparaRepeticiones = repeticion2;//para una posterior comparacion en caso de reemplazo

                    palabra2 = palabra;
                    repeticion2 = diccionario.get(palabra);

                    if (comparaRepeticiones > repeticion1) {//comparamos si la palabra que es sustituida 
                        palabra1 = persistePalabra;         //es repeti